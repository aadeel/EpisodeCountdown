<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar.Colored.App</item>
        <item name="actionBarWidgetTheme">@style/Theme.MyTheme.Widget</item>
    </style>
    
    <style name="ActionBar.Colored.App" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/light_blue</item>
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
   </style>
    
    <!-- ACtion Bar Text Color -->
    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Theme.MyTheme.Widget" parent="@android:style/Theme.Holo">
    <item name="android:textColorHint">@android:color/white</item>
    <item name="searchViewCloseIcon">@drawable/ic_action_remove</item>
</style>

</resources>
