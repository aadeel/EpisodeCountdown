<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.episodecountdown.MainActivity$SearchFragment" >

    <GridView
        android:scrollbarStyle="outsideOverlay"
        android:id="@+id/listview_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="360dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" 
        android:listSelector="@android:color/transparent"
        android:horizontalSpacing="@dimen/gridview_horizontal_spacing"
        android:verticalSpacing="@dimen/gridview_vertical_spacing"
        android:paddingLeft="@dimen/gridview_padding_left"
        android:paddingTop="@dimen/gridview_padding_right"
        android:paddingRight="@dimen/gridview_padding_right"
        android:paddingBottom="@dimen/gridview_padding_bottom"
        
        />

    <ImageView
        android:id="@+id/empty_listview_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:contentDescription="@string/generic_accessability"
        android:src="@drawable/ic_action_search_black"
        android:visibility="gone" />

</FrameLayout>